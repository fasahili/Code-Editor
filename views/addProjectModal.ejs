
<div class="modal fade" id="addProjectModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content"> 
      <div class="modal-header">
        <h5 class="modal-title"  id="exampleModalLabel" >Add Project</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form class="FromModalAddProject" action="addproject" method="POST">  
        <div class="modal-body">
          <div class="mb-4">
            <input type="text" class="form-control projectName" name="projectName" placeholder="Project Name"  required>
          </div>
          <div class="mb-4">
            <textarea type="text" class="form-control" name="description" placeholder="Description" style="height: 10rem; resize: none;" ></textarea>
          </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <div>
            <button type="button" class="btn btn-secondary btn-md"  data-bs-dismiss="modal">No,Cancel </button>
            <button type="submit" class="btn btn-primary btn-md">Yes,Confirm</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div> 
<script>
    const Form = document.querySelector('.FromModalAddProject');
    const ProjectInput = document.querySelector('.projectName');
    Form.addEventListener('submit', function(event) {
      const ProjectNameInput = ProjectInput.value.trim();
      const RegexPattern = /^[A-Za-z0-9 _-]+$/;
      if (!RegexPattern.test(ProjectNameInput)) {
        window.alert('Project name can only contain English alphabets, numbers, space, dash, and underscore.');
         event.preventDefault();
        return;
      }
    });
</script>
