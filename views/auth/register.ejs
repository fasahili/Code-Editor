<%- include('../partials/header') %>
<div class="RegisterBody align-items-center justify-content-center">
    <a href="home"><i class="bi bi-arrow-left-circle"" id="arrow-login-back"></i></a>
    <div class="card RegisterCard col-9 col-sm-8 col-lg-6 col-xl-4">
        <div class="card-body">
            <div class="row align-items-center flex-column">
                <span class="mt-3 h3 text-center">Sign Up</span>
                <div class="col-10 col-sm-8 text-center">
                    <a href="" class="col-12 btn btn-outline-dark RegisterExternalMethodButton mt-3" >
                        Sign up using Google
                        <img class="RegisterExternalMethodIcon ms-1" src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png" alt=""/>
                    </a>
                    <a href="" class="col-12 btn btn-outline-dark RegisterExternalMethodButton mt-3">
                        Sign up using GitHub
                        <svg class="RegisterExternalMethodIcon ms-1" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
                            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
                        </svg>
                    </a>
                    <a href="" class="col-12 btn btn-outline-dark RegisterExternalMethodButton mt-3">
                        Sign up using Facebook
                        <svg class="RegisterExternalMethodIcon ms-1" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
                            <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z" />
                        </svg>
                    </a>
                </div>
                <span class="mt-2 text-body-secondary text-center">OR</span>
                <div class="col-10 align-items-center justify-content-center">
                    <%- include('../partials/message',{message,errors}); %>
                </div>
                <form action="signup" method="post">
                    <div class="row justify-content-center">
                        <div class="col-8">
                            <label class="col-12 mt-4" for="email">What's your email?</label>
                            <input class="col-12 form-control" type="email" id="email" placeholder="Enter your email." name="email" value="<%= formData.email || ''  %>"required>

                            <label class="col-12 mt-3" for="firstName">What's your name?</label>
                            <div class="input-group ">
                                <input type="text" id="firstName" class="form-control" name="firstName" placeholder="First name" value="<%= formData.firstName || '' %>"required>
                                <input type="text" id="lastName" class="form-control" name="lastName" placeholder="Last name" value="<%= formData.lastName || ''  %>"required>
                            </div>

                            <label class="col-12 mt-3" for="password">Create a password</label>
                            <input class="col-12 form-control" type="password" placeholder="Create a password." id="password" name="password" required>

                            <label class="col-12 mt-3" for="confirm-password">Confirm your password</label>
                            <input class="col-12 form-control" type="password" placeholder="Confirm your password." id="cPassword" name="cpassword" required>
                        </div> 
                    </div>
                    <div class="d-flex justify-content-center align-items-center mt-4">
                        <button type="submit" class="btn btn-dark">Sign Up</button>
                    </div>
                </form>
                    <div class="d-flex align-items-center justify-content-center my-3">
                        <span class="h6 my-auto">Have an account?</span>
                        <a href="login" class="ms-2 my-auto">Log in</a>
                </div>
            </div>
        </div>
    </div>
</div>
  <%- include('../partials/footer') %>